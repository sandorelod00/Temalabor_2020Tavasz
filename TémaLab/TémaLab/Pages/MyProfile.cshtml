}

<!DOCTYPE html>
<html lang="en">
<head>
    <Title>Gyak</Title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" ; integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" ; integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" ; integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" ; integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <link rel="stylesheet" type="text/css" href="/css/Base.css">
</head>
<body>
    <!--<div class="container">
        <div class ="card">
            <h6 class ="card-header">@User.Identity.Name</h6>
            <ul class ="list-group">
                <li class ="list-group-item">
                    felhasználónév: @Model.user.NormalizedUserName
                </li>
                <li class ="list-group-item">
                    e-mail cím: @Model.user.Email
                </li>
                <li class ="list-group-item">
                    szerepkörök: @string.Join(", ", Model.Roles)
                </li></ul>
    </div>-->
    <div style="align-content: center; align-items: center">
        <p style="text-align:center">
            <img src="~/Images/profipic.png" class="postProfilePicture" />
        </p>
        <h6 style="align-self: center; text-align: center" class="card-header">@User.Identity.Name</h6>
    </div>
    <div>
        @if (@User.Identity.IsAuthenticated)
        {
            <form method="post" class="card" id="postCreater" asp-page-handler="add">
                <div class="card-body">
                    <div class="form-group">
                        <label name="NewPostContent"> @Model.user.UserName </label>
                        <textarea class="card-text col" name="NewPostContent" rows="5" placeholder="What is in you mind ?"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Post</button>
                </div>
            </form>
        }
        @foreach (var post in Model.Posts)
        {
            <vc:post post="post" user="Model.user"></vc:post>
        }
    </div>
</body>
</html>

