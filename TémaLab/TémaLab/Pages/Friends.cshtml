@page
@model TémaLab.FriendsModel
@{
    ViewData["Title"] = "Friends";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <Title>Gyak</Title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" ; integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" ; integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" ; integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" ; integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <link rel="stylesheet" type="text/css" href="/css/Base.css">
    <link rel="stylesheet" type="text/css" href="/css/site.css">

</head>
<body>
    <div class="container">
        <!--  Conteainer for contetnt. Ez a grid rendszer amibe bele rakunk több elemet. Külső Container-->
        <div class="container" id="contect">
            <!-- Container első sora. Ebben a sorban van a Left-user-Menu és a Header szöveg.-->
            <div class="row" id="FirstRow">
                <!--Col. Ebben az oszlopban van a Left-User-Menu-->
                <div class="col-lg-3 Left-User-menu">
                    <ul class="list-gourp">
                        <li class="list-group-item Left-User-menu-item">
                            <img class="img-fluid" src="~/Images/profipic.png"><br>
                            <a class="nicelink" asp-area="" asp-page="/MyProfile"><h3>Your Name</h3></a>
                        </li>
                        <li class="list-group-item Left-User-menu-item">
                            <a asp-area="" asp-page="/Introduction" class="list-group-item list-group-item-action Left-User-menu-item">Introduction</a>
                            <a asp-area="" asp-page="/Friends" class="list-group-item list-group-item-action Left-User-menu-item">Friends</a>
                            <a asp-area="" asp-page="/UpcomingEvents" class="list-group-item list-group-item-action Left-User-menu-item">Upcoming Events</a>
                            <a asp-area="" asp-page="/UpcomingCompetitions" class="list-group-item list-group-item-action Left-User-menu-item">Upcoming Competetions</a>
                            <a asp-area="" asp-page="/LeaderBoard" class="list-group-item list-group-item-action Left-User-menu-item">Leader Board</a>
                            <a asp-area="" asp-page="/EditProfile" class="list-group-item list-group-item-action Left-User-menu-item">Edit profile</a>
                        </li>
                    </ul>
                </div>

                <div class="col-lg-9">
                    <ul class="list-gorup list-group-horizontal">
                        <li class="list-group-item post">
                            <div>
                                <h2>Friends</h2>
                            </div>

                        <!--Friends placed here-->
                        <li class="list-group-item post">
                            <span class="post col-3">
                                    <img src="~/Images/profipic.png" class="friendProfilePicture">
                                <div>
                                    <a class="nicelink" asp-area="" asp-page="/OtherProfile"><b>User Name</b></a><br>
                                    Some basic game-related info
                                </div>
                            </span>
                        </li>

                        <li class="list-group-item post">
                            <div class="post col-3">
                                <div class="friend">
                                    <img src="~/Images/profipic.png" class="friendProfilePicture">
                                </div>
                                <div>
                                    <a class="nicelink" asp-area="" asp-page="/OtherProfile"><b>User Name</b></a><br>
                                    Some basic game-related info
                                </div>
                            </div>
                        </li>

                        <li class="list-group-item post col-lg-3">
                            <div class="post">
                                <div class="friend">
                                    <img src="~/Images/profipic.png" class="friendProfilePicture">
                                </div>
                                <div>
                                    <a class="nicelink" asp-area="" asp-page="/OtherProfile"><b>User Name</b></a><br>
                                    Some basic game-related info
                                </div>
                            </div>
                        </li>



                    </ul>
                </div>
            </div>
        </div>
</body>
</html>



